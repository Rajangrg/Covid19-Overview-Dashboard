@model IEnumerable<Covid19_DataEntities.GlobalInformation>

@{
    ViewBag.Title = "Index";
}

<h2 style="padding-top: 0.5rem; padding-bottom: 0.5rem">Global Information</h2>


<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>Total Cases</th>
            <th>Total Death</th>
            <th>Total Recovered</th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deaths)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recovered)
                </td>
            </tr>
        }
    </tbody>
</table>
